{% extends 'front.html.twig' %}

{% block title %}Elite Squads - Global Rankings{% endblock %}

{% block body %}
<div class="body_bg">
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner text-center">
                        <div class="breadcrumb_iner_item">
                            <h2>Explore Elite Teams</h2>
                            <p>Home / Teams / AI Leaderboard</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="latest_war padding_top">
        <div class="container">
            
            <div class="row justify-content-center mb-5">
                <div class="col-lg-10">
                    <div class="section_tittle text-center mb-4">
                        <h2>AI Global Leaderboard</h2>
                        <p>Real-time rankings powered by our Predictive ELO Algorithm</p>
                    </div>
                    
                    <div class="leaderboard_widget p-4" style="background: rgba(0,0,0,0.4); border-radius: 20px; border: 1px solid #ffc107; box-shadow: 0 10px 30px rgba(0,0,0,0.5);">
                        <div class="table-responsive">
                            <table class="table table-dark table-hover mb-0">
                                <thead style="border-bottom: 2px solid #ffc107;">
                                    <tr>
                                        <th class="py-3">Rank</th>
                                        <th class="py-3">Team</th>
                                        <th class="py-3">Performance</th>
                                        <th class="py-3 text-end">AI ELO Rating</th>
                                    </tr>
                                </thead>
                                <tbody id="api-leaderboard-content">
                                    <tr>
                                        <td colspan="4" class="text-center py-5">
                                            <div class="spinner-border text-warning" role="status">
                                                <span class="sr-only">Loading API Data...</span>
                                            </div>
                                            <p class="mt-2 text-muted">Connecting to Internal REST API...</p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="section_tittle text-center">
                        <h2>All Squads</h2>
                        <p>Total Registered Teams: {{ teams|length }}</p>
                    </div>
                </div>
            </div>

            <div class="row">
                {% for team in teams %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="single_war_text text-center p-4 shadow-sm" 
                             style="background: rgba(255,255,255,0.05); border-radius: 15px; min-height: 400px; border-top: 4px solid #007bff; transition: 0.3s transform;">
                            
                            <div class="team_logo mb-3">
                                {% if team.logo %}
                                    <img src="{{ team.logo }}" alt="{{ team.name }}" class="img-fluid rounded-circle" style="width: 100px; height: 100px; object-fit: cover; border: 3px solid #007bff;">
                                {% else %}
                                    <div class="avatar-text d-inline-flex align-items-center justify-content-center" 
                                         style="width: 100px; height: 100px; background: linear-gradient(135deg, #007bff 0%, #00d4ff 100%); border-radius: 50%; font-size: 40px; color: white; font-weight: bold;">
                                        {{ team.name|first|upper }}
                                    </div>
                                {% endif %}
                            </div>

                            <h4 class="text-white fw-bold mb-3">{{ team.name }}</h4>
                            
                            <div class="war_text_item d-flex justify-content-around mt-3 mb-4 pb-3 border-bottom">
                                <span class="text-light small"><i class="fas fa-users text-primary me-1"></i> {{ team.members|length }} Members</span>
                                <span class="text-light small"><i class="fas fa-gamepad text-primary me-1"></i> {{ team.tournaments|length }} Events</span>
                            </div>

                            <a href="{{ path('app_team_view', {'id': team.id}) }}" class="btn_2 d-block">View Profile</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // We target the API endpoint created in the Controller
    fetch('/api/leaderboard')
        .then(response => {
            if (!response.ok) throw new Error('API Response Error');
            return response.json();
        })
        .then(data => {
            const container = document.getElementById('api-leaderboard-content');
            container.innerHTML = ''; // Remove the spinner

            // We only show the Top 5 in this widget
            data.slice(0, 5).forEach((team, index) => {
                const row = `
                    <tr class="align-middle border-bottom border-secondary">
                        <td class="fw-bold text-warning fs-5">#${index + 1}</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="${team.logo || 'https://via.placeholder.com/40'}" class="rounded-circle me-3" style="width: 40px; height: 40px; object-fit: cover;">
                                <span class="text-white fw-bold">${team.name}</span>
                            </div>
                        </td>
                        <td class="text-muted">${team.wins} Victories</td>
                        <td class="text-end">
                            <span class="badge rounded-pill bg-info text-dark px-3 py-2" style="font-size: 0.9rem;">
                                <i class="fas fa-robot me-1"></i> ${Math.round(team.elo)}
                            </span>
                        </td>
                    </tr>
                `;
                container.insertAdjacentHTML('beforeend', row);
            });
        })
        .catch(error => {
            console.error('API Error:', error);
            document.getElementById('api-leaderboard-content').innerHTML = 
                '<tr><td colspan="4" class="text-center text-danger">API Integration Offline. Verify /api/leaderboard route.</td></tr>';
        });
});
</script>
{% endblock %}