{% extends 'back.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Team | Dashboard</title>
    <base href="/back_template/">
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/vendors/css/vendors.min.css">
    <link rel="stylesheet" href="assets/css/theme.min.css">
</head>
<body class="nxl-container">
    <div class="nxl-content p-4">
        {# Header #}
        <div class="page-header mb-4">
            <div class="page-header-left d-flex align-items-center">
                <div class="page-header-title">
                    <h5 class="m-b-10">Edit Team: {{ team.name }}</h5>
                </div>
                <ul class="breadcrumb ms-3 mb-0">
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_team_index') }}">Teams</a></li>
                    <li class="breadcrumb-item">Edit</li>
                </ul>
            </div>
            <div class="page-header-right ms-auto">
                <a href="{{ path('app_team_index') }}" class="btn btn-secondary">
                    <i class="feather-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>

        {# Form Card #}
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Team Information</h5>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.logo) }}
                        </div>
                        <div class="col-12 mb-3">
                            {{ form_row(form.description) }}
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-end gap-2">
                        <a href="{{ path('app_team_index') }}" class="btn btn-light">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="feather-save me-2"></i>Update Team
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</body>
</html>
{% endblock %}