{% extends 'back.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ team.name }} | Dashboard</title>
    <base href="/back_template/">
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/vendors/css/vendors.min.css">
    <link rel="stylesheet" href="assets/css/theme.min.css">
</head>
<body class="nxl-container">
    <div class="nxl-content p-4">
        {# Header #}
        <div class="page-header mb-4">
            <div class="page-header-left d-flex align-items-center">
                <div class="page-header-title">
                    <h5 class="m-b-10">Team Details</h5>
                </div>
                <ul class="breadcrumb ms-3 mb-0">
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_team_index') }}">Teams</a></li>
                    <li class="breadcrumb-item">{{ team.name }}</li>
                </ul>
            </div>
            <div class="page-header-right ms-auto">
                <a href="{{ path('app_team_index') }}" class="btn btn-secondary me-2">
                    <i class="feather-arrow-left me-2"></i>Back
                </a>
                {% if team.captain == app.user %}
                <a href="{{ path('app_team_edit', {id: team.id}) }}" class="btn btn-primary">
                    <i class="feather-edit-2 me-2"></i>Edit
                </a>
                {% endif %}
            </div>
        </div>

        <div class="row">
            {# Team Info Card #}
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body text-center">
                        {% if team.logo %}
                            <img src="{{ team.logo }}" alt="{{ team.name }}" class="rounded mb-3" style="width: 120px; height: 120px; object-fit: cover;">
                        {% else %}
                            <div class="avatar-text avatar-xl bg-primary text-white mb-3 mx-auto" style="width: 120px; height: 120px; font-size: 48px;">
                                {{ team.name|first|upper }}
                            </div>
                        {% endif %}
                        
                        <h4 class="fw-bold">{{ team.name }}</h4>
                        
                        {% if team.description %}
                        <p class="text-muted">{{ team.description }}</p>
                        {% endif %}
                        
                        <div class="mt-3">
                            <span class="badge bg-soft-info text-info me-2">
                                <i class="feather-users"></i> {{ team.members|length }} Members
                            </span>
                            <span class="badge bg-soft-success text-success">
                                <i class="feather-award"></i> {{ team.tournaments|length }} Tournaments
                            </span>
                        </div>
                        
                        <div class="mt-3">
                            <small class="text-muted">Created: {{ team.createdAt|date('d/m/Y H:i') }}</small>
                        </div>
                    </div>
                </div>
            </div>

            {# Members & Tournaments Cards #}
            <div class="col-lg-8">
                {# Captain Card #}
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="feather-star text-warning me-2"></i>Captain
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if team.captain %}
                        <div class="d-flex align-items-center">
                            <div class="avatar-text avatar-md bg-soft-warning text-warning me-3">
                                {{ team.captain.firstName|first }}{{ team.captain.lastName|first }}
                            </div>
                            <div>
                                <h6 class="mb-0">{{ team.captain.firstName }} {{ team.captain.lastName }}</h6>
                                <small class="text-muted">{{ team.captain.email }}</small>
                            </div>
                        </div>
                        {% else %}
                        <p class="text-muted mb-0">No captain assigned</p>
                        {% endif %}
                    </div>
                </div>

                {# Members Card #}
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="feather-users me-2"></i>Members ({{ team.members|length }})
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if team.members|length > 0 %}
                        <div class="list-group list-group-flush">
                            {% for member in team.members %}
                            <div class="list-group-item d-flex align-items-center px-0">
                                <div class="avatar-text avatar-sm bg-soft-primary text-primary me-3">
                                    {{ member.firstName|first }}{{ member.lastName|first }}
                                </div>
                                <div>
                                    <h6 class="mb-0">{{ member.firstName }} {{ member.lastName }}</h6>
                                    <small class="text-muted">{{ member.email }}</small>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        {% else %}
                        <p class="text-muted mb-0">No members yet</p>
                        {% endif %}
                    </div>
                </div>

                {# Tournaments Card #}
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="feather-award me-2"></i>Tournaments ({{ team.tournaments|length }})
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if team.tournaments|length > 0 %}
                        <div class="list-group list-group-flush">
                            {% for tournament in team.tournaments %}
                            <div class="list-group-item px-0">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">{{ tournament.name }}</h6>
                                        <small class="text-muted">{{ tournament.game }} â€¢ {{ tournament.format }}</small>
                                    </div>
                                    <span class="badge 
                                        {% if tournament.status == 'open' %}bg-success
                                        {% elseif tournament.status == 'ongoing' %}bg-primary
                                        {% elseif tournament.status == 'completed' %}bg-info
                                        {% else %}bg-secondary
                                        {% endif %}">
                                        {{ tournament.status|upper }}
                                    </span>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        {% else %}
                        <p class="text-muted mb-0">Not registered in any tournament yet</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {# Delete Section (only for captain) #}
        {% if team.captain == app.user %}
        <div class="card border-danger mt-4">
            <div class="card-header bg-soft-danger">
                <h5 class="card-title text-danger mb-0">
                    <i class="feather-alert-triangle me-2"></i>Danger Zone
                </h5>
            </div>
            <div class="card-body">
                <p class="mb-3">Once you delete this team, there is no going back. Please be certain.</p>
                <form method="post" action="{{ path('app_team_delete', {id: team.id}) }}" onsubmit="return confirm('Are you sure you want to delete this team? This action cannot be undone.');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ team.id) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="feather-trash-2 me-2"></i>Delete Team
                    </button>
                </form>
            </div>
        </div>
        {% endif %}
    </div>
</body>
</html>
{% endblock %}