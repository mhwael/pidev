{% extends 'front.html.twig' %}

{% block title %}{{ guide.title }} - Guide{% endblock %}

{% block body %}
{# âœ¨ AI PREDICTION POPUP (Fixed for Navbar) âœ¨ #}
<div id="ai-popup-container" style="position: fixed; top: 120px; right: 30px; z-index: 10500; max-width: 400px; animation: slideIn 0.5s ease-out;">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div style="background-color: #111235; border-left: 6px solid {% if 'FRUSTRATED' in message %}#ff005c{% else %}#00e676{% endif %}; border-radius: 8px; box-shadow: 0 10px 25px rgba(0,0,0,0.8); padding: 20px; margin-bottom: 15px; position: relative;">
                
                {# Close Button #}
                <button type="button" onclick="this.parentElement.style.display='none';" style="background: transparent; border: none; color: #ccc; font-size: 1.5rem; position: absolute; right: 10px; top: 10px; cursor: pointer; line-height: 1;">
                    &times;
                </button>
                
                {# Content #}
                <div style="display: flex; align-items: start; gap: 15px;">
                    <div style="font-size: 2rem;">ðŸ¤–</div>
                    <div>
                        <h5 style="color: white; font-weight: bold; margin-bottom: 5px;">AI Prediction Result</h5>
                        <p style="color: #ddd; margin: 0; font-size: 0.95rem; line-height: 1.4;">{{ message|replace({'ðŸ¤– AI Analysis: ': ''}) }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>

{# Animation & Auto-Close Script #}
<style>
    @keyframes slideIn {
        from { transform: translateX(120%); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
    }
</style>
<script>
    // Only run the timer if there's actually a message inside the container
    var popupContainer = document.getElementById('ai-popup-container');
    if (popupContainer && popupContainer.children.length > 0) {
        setTimeout(function() {
            popupContainer.style.transition = 'opacity 0.5s ease';
            popupContainer.style.opacity = '0';
            setTimeout(() => popupContainer.style.display = 'none', 500);
        }, 8000);
    }
</script>
{# âœ¨ END OF AI POPUP âœ¨ #}


{# 1. HERO SECTION #}
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>{{ guide.title }}</h2>
                        <p>Home <span>//</span> Guide <span>//</span> {{ guide.game.name }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="blog_area single-post-area section_padding">
   <div class="container">
      <div class="row">
         <div class="col-lg-8 posts-list">
            <div class="single-post">
                
               <div class="feature-img">
                  {% if guide.coverImage %}
                      <img class="img-fluid" src="{{ asset('uploads/guide/' ~ guide.coverImage) }}" alt="{{ guide.title }}" style="width:100%; max-height: 500px; object-fit: cover; border-radius: 10px; margin-bottom: 30px;">
                  {% else %}
                      <div class="alert alert-secondary text-center">No cover image uploaded for this guide.</div>
                  {% endif %}
               </div>
               
               <div class="blog_details">
                  <h2>{{ guide.title }}</h2>
                  <ul class="blog-info-link mt-3 mb-4">
                      <li><a href="#"><i class="far fa-user"></i> Game: {{ guide.game.name }}</a></li>
                      <li><a href="#"><i class="far fa-comments"></i> Difficulty: {{ guide.difficulty }}</a></li>
                  </ul>
                  
                  <p class="excert">
                      {{ guide.description|nl2br }}
                  </p>

                  <div class="quote-wrapper">
                     <div class="quotes">Step-by-Step Walkthrough</div>
                  </div>
                  
                  <div class="guide-steps mt-5 mb-5">
                      {% for step in guide.guideSteps %}
                          <div class="step-item mb-5 border-bottom pb-4">
                              <h4 class="mb-3" style="color: #ff005c;">Step {{ step.stepOrder }}: {{ step.title }}</h4>
                              
                              {% if step.image %}
                                  <div class="step-media my-3">
                                      {% if 'http' in step.image %}
                                          <img src="{{ step.image }}" 
                                               alt="{{ step.title }}" 
                                               class="img-fluid rounded" 
                                               style="max-height: 350px; width: 100%; object-fit: cover; border: 2px solid #ff005c;">
                                      {% else %}
                                          <img src="{{ asset('uploads/guide/' ~ step.image) }}" 
                                               alt="{{ step.title }}" 
                                               class="img-fluid rounded" 
                                               style="max-height: 350px;">
                                      {% endif %}
                                  </div>
                              {% endif %}
                              
                              {% if step.videoUrl %}
                                  <div class="video-container mt-3 mb-3">
                                      <iframe width="100%" height="315" 
                                              src="{{ step.videoUrl|replace({'watch?v=': 'embed/'}) }}" 
                                              frameborder="0" allowfullscreen>
                                      </iframe>
                                  </div>
                              {% endif %}
                              
                              <p>{{ step.content|nl2br }}</p>
                          </div>
                      {% else %}
                          <p class="text-muted">No steps added yet.</p>
                      {% endfor %}
                  </div>
               </div>
            </div>
         </div>
         
         <div class="col-lg-4">
            <div class="blog_right_sidebar">
               
               <aside class="single_sidebar_widget post_category_widget" style="background: #111235; border: 1px solid #2a2b5e;">
                  <h4 class="widget_title" style="color: white;">Game Info</h4>
                  <ul class="list cat-list">
                     <li>
                        <a href="#" class="d-flex justify-content-between">
                           <p style="color: #ccc;">Game</p>
                           <p style="color: #ccc;">{{ guide.game.name }}</p>
                        </a>
                     </li>
                     <li>
                        <a href="#" class="d-flex justify-content-between">
                           <p style="color: #ccc;">Difficulty</p>
                           <p style="color: #ccc;">{{ guide.difficulty }}</p>
                        </a>
                     </li>
                  </ul>
               </aside>

               <aside class="single_sidebar_widget post_category_widget" style="background: #111235; border: 1px solid #2a2b5e; margin-top: 30px;">
                  <h4 class="widget_title" style="color: white;">Community Reviews</h4>
                  
                  <div class="rating-form-box mb-4">
                      {% if app.user %}
                          {{ form_start(ratingForm) }}
                              
                              <div style="color: #ff005c;">
                                  {{ form_errors(ratingForm) }}
                              </div>

                              <div class="form-group">
                                  {{ form_widget(ratingForm.ratingValue) }}
                              </div>
                              
                              <div class="form-group mt-2">
                                  {{ form_widget(ratingForm.comment) }}
                                  
                                  <div style="color: #ff005c; font-weight: bold; font-size: 0.9rem; margin-top: 5px;">
                                      {{ form_errors(ratingForm.comment) }}
                                  </div>
                              </div>
                              
                             

                          {{ form_end(ratingForm) }}
                      {% else %}
                          <div class="alert alert-dark text-center" style="background: #1f2042; border: 1px solid #2a2b5e;">
                              <a href="{{ path('app_login') }}" style="color: #ff005c;">Login</a> to write a review.
                          </div>
                      {% endif %}
                  </div>
            
                  <hr style="border-top: 1px solid #2a2b5e;">
            
                  <div class="review-list" style="max-height: 400px; overflow-y: auto;">
                      {% for rating in guide.guideRatings %}
                           <div class="review-item" style="border-bottom: 1px solid #2a2b5e; padding-bottom: 10px; margin-bottom: 15px;">
                              
                              {# âœ¨ DiceBear Avatar API âœ¨ #}
                              <div class="d-flex justify-content-between align-items-center">
                                  <div class="d-flex align-items-center">
                                      <img src="https://api.dicebear.com/9.x/pixel-art/svg?seed={{ rating.user ? rating.user.email : 'anon' }}" 
                                           alt="Avatar" 
                                           style="width: 35px; height: 35px; border-radius: 50%; margin-right: 10px; border: 1px solid #ff005c; background: #111235;">
                                      
                                      <span style="color: #ffc107; font-size: 1.1rem;">
                                          {% for i in 1..rating.ratingValue %}â˜…{% endfor %}
                                      </span>
                                  </div>
                                  <small style="color: #666;">{{ rating.createdAt|date('d M') }}</small>
                              </div>
                              
                              {% if rating.comment %}
                                  <p style="color: #ddd; font-size: 0.9rem; margin-top: 10px; font-style: italic; padding-left: 45px;">
                                      "{{ rating.comment }}"
                                  </p>
                              {% endif %}
                              
                              <p style="color: #888; font-size: 0.75rem; text-align: right; margin-bottom: 0;">
                                  - {{ rating.user ? rating.user.email : 'Anonymous' }}
                              </p>
                           </div>
                      {% else %}
                          <p style="color: #888; text-align: center;">No reviews yet. Be the first!</p>
                      {% endfor %}
                  </div>
               </aside>

            </div>
         </div>
      </div>
   </div>
</section>
{% endblock %}