{% extends 'back.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ tournament.name }} | Dashboard</title>
    <base href="/back_template/">
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/vendors/css/vendors.min.css">
    <link rel="stylesheet" href="assets/css/theme.min.css">
</head>
<body class="nxl-container">
    <div class="nxl-content p-4">
        {# Header #}
        <div class="page-header mb-4">
            <div class="page-header-left d-flex align-items-center">
                <div class="page-header-title">
                    <h5 class="m-b-10">Tournament Details</h5>
                </div>
                <ul class="breadcrumb ms-3 mb-0">
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_tournament_index') }}">Tournaments</a></li>
                    <li class="breadcrumb-item">{{ tournament.name }}</li>
                </ul>
            </div>
            <div class="page-header-right ms-auto">
                <a href="{{ path('app_tournament_index') }}" class="btn btn-secondary me-2">
                    <i class="feather-arrow-left me-2"></i>Back
                </a>
                {% if tournament.organizer == app.user %}
                <a href="{{ path('app_tournament_edit', {id: tournament.id}) }}" class="btn btn-primary me-2">
                    <i class="feather-edit-2 me-2"></i>Edit
                </a>
                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="avatar-text avatar-xl bg-primary text-white mb-3 mx-auto" style="width: 120px; height: 120px; font-size: 48px;">
                            {{ tournament.game|first|upper }}{{ tournament.format|first|upper }}
                        </div>
                        
                        <h4 class="fw-bold">{{ tournament.name }}</h4>
                        
                        {% if tournament.description %}
                        <p class="text-muted">{{ tournament.description }}</p>
                        {% endif %}
                        
                        <div class="mt-3">
                            <span class="badge bg-soft-info text-info me-2">
                                <i class="feather-award"></i> {{ tournament.format|title }}
                            </span>
                            <span class="badge bg-soft-success text-success me-2">
                                <i class="feather-users"></i> {{ tournament.teams|length }}/{{ tournament.maxTeams }} Teams
                            </span>
                            <span class="badge 
                                {% if tournament.status == 'open' %}bg-success
                                {% elseif tournament.status == 'ongoing' %}bg-primary
                                {% elseif tournament.status == 'completed' %}bg-info
                                {% elseif tournament.status == 'cancelled' %}bg-danger
                                {% else %}bg-secondary
                                {% endif %}">
                                <i class="feather-clock"></i> {{ tournament.status|title }}
                            </span>
                        </div>
                        
                        <div class="mt-3">
                            <small class="text-muted">
                                {% if tournament.prize %}
                                    <i class="feather-gift me-1"></i>{{ tournament.prize }}
                                {% endif %}
                            </small>
                        </div>
                        
                        <div class="mt-3">
                            <small class="text-muted">Created: {{ tournament.createdAt|date('d/m/Y H:i') }}</small>
                        </div>
                    </div>
                </div>
            </div>

            {# Tournament Details & Organizer Cards #}
            <div class="col-lg-8">
                {# Dates Card #}
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="feather-calendar me-2"></i>Tournament Dates
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <div class="card bg-soft-info">
                                    <div class="card-body">
                                        <h6 class="text-info mb-1">Registration</h6>
                                        <h4 class="fw-bold">{{ tournament.registrationDeadline|date('d M Y') }}</h4>
                                        <small class="text-muted">{{ tournament.registrationDeadline|date('H:i') }}</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-soft-primary">
                                    <div class="card-body">
                                        <h6 class="text-primary mb-1">Start</h6>
                                        <h4 class="fw-bold">{{ tournament.startDate|date('d M Y') }}</h4>
                                        <small class="text-muted">{{ tournament.startDate|date('H:i') }}</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-soft-warning">
                                    <div class="card-body">
                                        <h6 class="text-warning mb-1">End</h6>
                                        <h4 class="fw-bold">{{ tournament.endDate|date('d M Y') }}</h4>
                                        <small class="text-muted">{{ tournament.endDate|date('H:i') }}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Organizer Card #}
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="feather-star text-warning me-2"></i>Organizer
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if tournament.organizer %}
                        <div class="d-flex align-items-center">
                            <div class="avatar-text avatar-md bg-soft-warning text-warning me-3">
                                {{ tournament.organizer.firstName|first }}{{ tournament.organizer.lastName|first }}
                            </div>
                            <div>
                                <h6 class="mb-0">{{ tournament.organizer.firstName }} {{ tournament.organizer.lastName }}</h6>
                                <small class="text-muted">{{ tournament.organizer.email }}</small>
                            </div>
                        </div>
                        {% else %}
                        <p class="text-muted mb-0">No organizer assigned</p>
                        {% endif %}
                    </div>
                </div>

                {# Teams Card #}
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="feather-users me-2"></i>Registered Teams ({{ tournament.teams|length }}/{{ tournament.maxTeams }})
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if tournament.teams|length > 0 %}
                        <div class="list-group list-group-flush">
                            {% for team in tournament.teams %}
                            <div class="list-group-item d-flex align-items-center px-0">
                                {% if team.logo %}
                                <img src="{{ team.logo }}" alt="{{ team.name }}" class="avatar avatar-sm rounded me-3" style="width: 40px; height: 40px; object-fit: cover;">
                                {% else %}
                                <div class="avatar-text avatar-sm bg-soft-primary text-primary me-3">
                                    {{ team.name|first|upper }}
                                </div>
                                {% endif %}
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">{{ team.name }}</h6>
                                    <small class="text-muted">{{ team.description ?: 'No description' }}</small>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        {% else %}
                        <p class="text-muted mb-0">No teams registered yet</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {# Rules & Delete Section #}
        {% if tournament.rules %}
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="feather-file-text me-2"></i>Tournament Rules
                </h5>
            </div>
            <div class="card-body">
                <div class="rules-content">{{ tournament.rules|raw }}</div>
            </div>
        </div>
        {% endif %}

        {# Delete Section (only for organizer) #}
        {% if tournament.organizer == app.user %}
        <div class="card border-danger mt-4">
            <div class="card-header bg-soft-danger">
                <h5 class="card-title text-danger mb-0">
                    <i class="feather-alert-triangle me-2"></i>Danger Zone
                </h5>
            </div>
            <div class="card-body">
                <p class="mb-3">Once you delete this tournament, there is no going back. Please be certain.</p>
                <form method="post" action="{{ path('app_tournament_delete', {id: tournament.id}) }}" onsubmit="return confirm('Are you sure you want to delete this tournament? This action cannot be undone.');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tournament.id) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="feather-trash-2 me-2"></i>Delete Tournament
                    </button>
                </form>
            </div>
        </div>
        {% endif %}
    </div>
</body>
</html>
{% endblock %}
