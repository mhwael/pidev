{% extends 'back.html.twig' %}

{% block title %}Guide Management{% endblock %}

{% block body %}
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="mb-0">Guide Management</h5>
            <p class="text-muted mb-0">Manage and search your game guides.</p>
        </div>
        <a href="{{ path('app_guide_new') }}" class="btn btn-primary">
            <i class="feather-plus me-2"></i>Create New Guide
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0"><i class="feather-search text-muted"></i></span>
                <input type="text" id="liveSearch" class="form-control border-start-0 ps-0" placeholder="Type to search guides by title, game, or author..." autocomplete="off">
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="guideTable">
                    <thead class="bg-light">
                        <tr>
                            <th>Title</th>
                            <th>Game</th>
                            <th>Difficulty</th>
                            <th>Author</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for guide in guides %}
                        <tr class="guide-row">
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avtar avtar-xs bg-light-primary text-primary me-2">
                                        <i class="feather-book"></i>
                                    </div>
                                    <a href="{{ path('app_guide_show', {'id': guide.id}) }}" class="text-dark fw-bold text-decoration-none search-title">
                                        {{ guide.title }}
                                    </a>
                                </div>
                            </td>
                            <td class="search-game">{{ guide.game.name }}</td>
                            <td>
                                <span class="badge bg-{{ guide.difficulty == 'Hard' ? 'danger' : (guide.difficulty == 'Medium' ? 'warning' : 'success') }}">
                                    {{ guide.difficulty }}
                                </span>
                            </td>
                            <td class="search-author">
                                {% if guide.author %}
                                    <span class="text-muted small">{{ guide.author.email }}</span>
                                {% else %}
                                    <span class="text-muted small fst-italic">No Author</span>
                                {% endif %}
                            </td>
                            <td class="text-end">
                                <a href="{{ path('app_guide_show', {'id': guide.id}) }}" class="btn btn-sm btn-light-secondary me-1">
                                    <i class="feather-eye"></i> View
                                </a>
                                <a href="{{ path('app_guide_edit', {'id': guide.id}) }}" class="btn btn-sm btn-light-primary">
                                    Edit
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <h6 class="text-muted">No guides found</h6>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                
                <div id="noResults" class="text-center py-5 d-none">
                    <i class="feather-frown text-muted fs-1 mb-3"></i>
                    <h6 class="text-muted">No matching guides found.</h6>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('liveSearch');
            const tableRows = document.querySelectorAll('.guide-row');
            const noResultsMsg = document.getElementById('noResults');

            searchInput.addEventListener('keyup', function() {
                const query = this.value.toLowerCase();
                let visibleCount = 0;

                tableRows.forEach(row => {
                    // Get text from Title, Game, and Author columns
                    const title = row.querySelector('.search-title').textContent.toLowerCase();
                    const game = row.querySelector('.search-game').textContent.toLowerCase();
                    const author = row.querySelector('.search-author').textContent.toLowerCase();

                    // Check if query exists in any of them
                    if (title.includes(query) || game.includes(query) || author.includes(query)) {
                        row.style.display = ''; // Show
                        visibleCount++;
                    } else {
                        row.style.display = 'none'; // Hide
                    }
                });

                // Show "No Results" message if everything is hidden
                if (visibleCount === 0) {
                    noResultsMsg.classList.remove('d-none');
                } else {
                    noResultsMsg.classList.add('d-none');
                }
            });
        });
    </script>
{% endblock %}