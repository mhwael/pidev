{% extends 'back.html.twig' %}

{% block title %}Guide Management{% endblock %}

{% block body %}
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="mb-0">Guide Management</h5>
            <p class="text-muted mb-0">Manage all game guides and their content.</p>
        </div>
        <a href="{{ path('app_guide_new') }}" class="btn btn-primary">
            <i class="feather-plus me-2"></i>Create New Guide
        </a>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Title</th>
                            <th>Game</th>
                            <th>Difficulty</th>
                            <th>Author</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for guide in guides %}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avtar avtar-xs bg-light-primary text-primary me-2">
                                        <i class="feather-book"></i>
                                    </div>
                                    {# ✨ FIX: Made the Title clickable #}
                                    <a href="{{ path('app_guide_show', {'id': guide.id}) }}" class="text-dark fw-bold text-decoration-none">
                                        {{ guide.title }}
                                    </a>
                                </div>
                            </td>
                            <td>{{ guide.game.name }}</td>
                            <td>
                                <span class="badge bg-{{ guide.difficulty == 'Hard' ? 'danger' : (guide.difficulty == 'Medium' ? 'warning' : 'success') }}">
                                    {{ guide.difficulty }}
                                </span>
                            </td>
                            <td>
                                {% if guide.author %}
                                    <span class="text-muted small">{{ guide.author.email }}</span>
                                {% else %}
                                    <span class="text-muted small fst-italic">No Author</span>
                                {% endif %}
                            </td>
                            <td class="text-end">
                                {# ✨ FIX: Added the VIEW button #}
                                <a href="{{ path('app_guide_show', {'id': guide.id}) }}" class="btn btn-sm btn-light-secondary me-1">
                                    <i class="feather-eye"></i> View
                                </a>
                                <a href="{{ path('app_guide_edit', {'id': guide.id}) }}" class="btn btn-sm btn-light-primary">
                                    Edit
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <h6 class="text-muted">No guides found</h6>
                                <a href="{{ path('app_guide_new') }}" class="btn btn-sm btn-primary mt-2">Create One</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}