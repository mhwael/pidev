{% extends 'back.html.twig' %}

{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Product | Dashboard</title>
    <base href="/back_template/">
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/vendors/css/vendors.min.css">
    <link rel="stylesheet" href="assets/css/theme.min.css">
</head>
<body class="nxl-container">
<div class="nxl-content p-4">
    <div class="page-header mb-4">
        <div class="page-header-left d-flex align-items-center">
            <div class="page-header-title">
                <h5 class="m-b-10">Edit Product</h5>
            </div>
            <ul class="breadcrumb ms-3 mb-0">
                <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="{{ path('product_index') }}">Product Management</a></li>
                <li class="breadcrumb-item">Edit</li>
            </ul>
        </div>
        <div class="page-header-right ms-auto">
            <a href="{{ path('product_index') }}" class="btn btn-light-brand">
                <i class="feather-arrow-left me-2"></i>Back
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            {% include 'product/_form.html.twig' with { form: form, button_label: 'Update' } %}

            <hr class="my-4">

            <form method="post" action="{{ path('product_delete', {id: product.id}) }}" onsubmit="return confirm('Delete this product?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete_product_' ~ product.id) }}">
                <button type="submit" class="btn btn-danger">
                    <i class="feather-trash-2 me-2"></i>Delete
                </button>
            </form>
        </div>
    </div>
</div>
</body>
</html>

{% endblock %}
